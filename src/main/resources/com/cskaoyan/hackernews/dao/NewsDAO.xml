<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cskaoyan.hackernews.dao.NewsDAO">
    <sql id="table">news</sql>
    <sql id="selectFields">id,title, link, image, like_count, comment_count,created_date,user_id
    </sql>
    <select id="selectByUserIdAndOffset" resultType="com.cskaoyan.hackernews.model.News">
        SELECT
        <include refid="selectFields"/>
        FROM
        <include refid="table"/>

        <if test="userId != 0">
            WHERE user_id = #{userId}
        </if>
        ORDER BY id DESC
        LIMIT #{offset},#{limit}
    </select>
    <select id="selectNewsinfoByid"  resultType="news" >
        SELECT
        <include refid="selectFields"/>
        FROM
        <include refid="table"/>
        where news.id=#{id}
    </select>
    <update id="updataCommentCount">
        update news set comment_count=comment_count+1 where id = #{id}
    </update>
</mapper>
